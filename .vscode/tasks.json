{
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/cpp/22-bricks/src/sourcefiles/*.cpp",
                //"${workspaceFolder}/cpp/00-vector/src/sourcefiles/*.cpp",
                //"${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/cpp/22-bricks/main",
                //"${workspaceFolder}/cpp/00-vector/main",
                //"${workspaceFolder}/main",
                "-pthread",
                "-lsfml-graphics", 
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",
                "-lboost_filesystem",
                
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-9 build active file",
            "command": "/usr/bin/g++-9",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}